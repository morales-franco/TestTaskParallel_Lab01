<Window x:Class="Lab03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab03"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label x:Name="lblResult_Dispatcher"/>
   
        <Button x:Name="btnGetResult_Dispatcher" Click="btnGetResult_Dispatcher_Click" Content="Obtener Resultado - Dispatcher"/>

        <Label x:Name="lblResult_async_await" Background="Yellow"/>

        <Button x:Name="btnGetResult_async_await" Click="btnGetResult_async_await_Click" Content="Obtener Resultado - async_await" Background="Yellow"/>

        <Label x:Name="lblResult_awaitable_methods" Background="Azure"/>

        <Button x:Name="btnGetResult_awaitable_methods" Click="btnGetResult_awaitable_methods_Click" Content="Obtener Resultado - awaitable_methods" Background="Azure"/>

        <Button x:Name="btnGetProducts_callback" Click="btnGetProducts_callback_Click" Content="Búscar productos" Background="Coral"/>

        <ListBox x:Name="Products" Width="100" Background="Coral" />

    </StackPanel>
</Window>
